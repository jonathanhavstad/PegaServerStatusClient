<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/landing_fragment_list_title"
            android:paddingTop="@dimen/root_element_vertical_padding"
            android:paddingBottom="@dimen/root_element_vertical_padding"
            android:paddingLeft="@dimen/child_element_horizontal_padding"
            android:paddingRight="@dimen/child_element_horizontal_padding"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/loading_fragment_list_headers"
            app:layoutManager="GridLayoutManager"
            android:paddingTop="@dimen/root_element_vertical_padding"
            android:paddingBottom="@dimen/root_element_vertical_padding"
            android:paddingLeft="@dimen/child_element_horizontal_padding"
            android:paddingRight="@dimen/child_element_horizontal_padding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/landing_fragment_list_item"
            app:layoutManager="GridLayoutManager"
            android:paddingTop="@dimen/root_element_vertical_padding"
            android:paddingBottom="@dimen/root_element_vertical_padding"
            android:paddingLeft="@dimen/child_element_horizontal_padding"
            android:paddingRight="@dimen/child_element_horizontal_padding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</android.support.v7.widget.CardView>