					“font-size”: “12”
					“font-family”: “sans-serif”
				}
			} 
			“ip_address”: {
				“attributes”: {
					“type”: “textview”,
					“width”: “match_parent”,
					“height”: “wrap_content”
					“font-style”: “normal”
					“font-size”: “12”
					“font-family”: “sans-serif”
				}
			},
			“application_name”: {
				“attributes”: {
					“type”: “textview”,
					“width”: “match_parent”,
					“height”: “wrap_content”
					“font-style”: “normal”
					“font-size”: “12”
					“font-family”: “sans-serif”
				}
			},
			“host_up_down”: {
				“attributes”: {
					“type”: “textview”,
					“width”: “match_parent”,
					“height”: “wrap_content”
					“font-style”: “normal”
					“font-size”: “12”
					“font-family”: “sans-serif”
				}		
			}
		]
	}
