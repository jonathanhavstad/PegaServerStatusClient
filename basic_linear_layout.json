{
	“root”: {
		“attributes”: [
			“type”: “linear_layout”,
			“orientation”: “vertical”,
			“width”: “match_parent”,
			“height”: “match_parent”
		],
		“children”: [
			“logo”: {
				“attributes”: {
					“type”: “imageview”,
					“width”: “match_parent”
					“height”: wrap_content”
					“src”: “http://webaddress.com”
				}
			},
			“hostname”: {
				“attributes”: {
					“type”: “textview”,
					“width”: “match_parent”,
					“height”: “wrap_content”
